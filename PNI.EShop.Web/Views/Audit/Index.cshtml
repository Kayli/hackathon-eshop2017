@model PNI.EShop.Web.Models.AuditViewModel

@{
    ViewData["Title"] = "Audit Page";
}

<h2>Audit</h2>

<table>
    @foreach (var audit in Model.AuditList)
    {
        <tr>
            <td style="padding-right: 30px;">@audit.Id</td>
            <td style="padding-right: 30px;">@audit.EventName</td>
            <td style="padding-right: 30px;">@audit.EventDetails</td>
            <td style="padding-right: 30px;">@audit.EventDateTime.ToString()</td>
        </tr>
    }
</table>

@if (!Model.AuditList.Any())
{
    <p>No audit items found.</p>
}
<br/>
<p>@Model.RetrievedTime.ToString()</p>

@Html.ActionLink("Clear All", "Clear")