@model PNI.EShop.Web.Models.ProductViewModel

@{
    ViewBag.Title = "Product " + Model.Name;
    Layout = "_Layout";
}

<h2>@Model.Name</h2>
<table>
    <tr>
        <th>Name</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Color</th>
        <td>@Model.Color</td>
    </tr>
    <tr>
        <th>Type</th>
        <td>@Model.Type</td>
    </tr>
    <tr>
        <th>Price</th>
        <td>$9.99</td>
    </tr>
</table>
